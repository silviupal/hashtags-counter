<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/spacing_double_huge"
    android:paddingEnd="@dimen/spacing_double_huge">

    <TextView
        android:id="@+id/emptyScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/emptyScreenTitleTextSize"
        tools:text="No saved posts" />

    <TextView
        android:id="@+id/emptyScreenMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_double"
        android:gravity="center"
        tools:text="Here you can save posts for future usages.\nCreate new post by clicking the round green button." />

</LinearLayout>